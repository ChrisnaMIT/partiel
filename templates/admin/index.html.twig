{% extends 'base.html.twig' %}

{% block body %}
    <div class="min-h-screen bg-gray-100 p-6">
        <div class="max-w-5xl mx-auto bg-white rounded-xl shadow-lg p-8">
            <h1 class="text-2xl font-bold text-center text-gray-800 mb-6">Tous les utilisateurs</h1>

            {% for user in users %}
                <div class="bg-blue-50 rounded-xl p-4 mb-4 shadow-sm">
                    <div class="text-sm font-medium text-gray-600 mb-2">
                        {% for role in user.roles %}
                            {% if role == 'ROLE_USER' %}
                                <span class="text-blue-700">User</span>
                            {% elseif role == 'ROLE_ADMIN' %}
                                <span class="text-red-600">Admin</span>
                            {% elseif role == 'ROLE_EMPLOYER' %}
                                <span class="text-green-600">Employer</span>
                            {% endif %}
                        {% endfor %}
                    </div>

                    {% if user == app.user %}
                        <p class="text-xs text-purple-600 font-semibold">C'est toi</p>
                    {% endif %}

                    <p class="text-gray-700 font-semibold">C'est moi : {{ user.email }}</p>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-2 mt-4">
                        <form method="post" action="{{ path('app_promote_admin', {id: user.id}) }}">
                            <button type="submit" class="w-full bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600 transition">Promote Admin</button>
                        </form>
                        <form method="post" action="{{ path('app_demote_admin', {id: user.id}) }}">
                            <button type="submit" class="w-full bg-red-100 text-red-700 px-4 py-2 rounded hover:bg-red-200 transition">Demote Admin</button>
                        </form>

                        <form method="post" action="{{ path('app_promote_employer', {id: user.id}) }}">
                            <button type="submit" class="w-full bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600 transition">Promote Employer</button>
                        </form>
                        <form method="post" action="{{ path('app_demote_employer', {id: user.id}) }}">
                            <button type="submit" class="w-full bg-green-100 text-green-700 px-4 py-2 rounded hover:bg-green-200 transition">Demote Employer</button>
                        </form>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-gray-500">Aucun utilisateur trouv√©.</p>
            {% endfor %}

            <div class="text-center mt-6">
                <a href="{{ path('app_admin') }}" class="inline-block bg-gray-800 text-white px-4 py-2 rounded hover:bg-gray-700 transition">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}

