{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">Gestion des utilisateurs</h1>

        {% for user in users %}
            <div class="card mb-3 shadow-sm p-3" style="border-left: 5px solid {% if 'ROLE_ADMIN' in user.roles %}green{% else %}gray{% endif %};">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">{{ user.email }}</h5>
                        <p class="mb-0 text-muted">
                            Rôles :
                            {% if user.roles is not empty %}
                                {{ user.roles|join(', ') }}
                            {% else %}
                                Aucun rôle
                            {% endif %}
                        </p>
                    </div>
                    <div class="text-end">
                        {% if 'ROLE_ADMIN' in user.roles %}
                            <a href="{{ path('app_demote_admin', {id: user.id}) }}"
                               class="btn btn-sm btn-danger"
                               onclick="return confirm('Voulez-vous vraiment rétrograder cet utilisateur ?')">
                                Rétrograder
                            </a>
                        {% else %}
                            <a href="{{ path('app_promote_admin', {id: user.id}) }}"
                               class="btn btn-sm btn-success"
                               onclick="return confirm('Voulez-vous vraiment promouvoir cet utilisateur en admin ?')">
                                Promouvoir
                            </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% else %}
            <p class="text-muted text-center">Aucun utilisateur trouvé.</p>
        {% endfor %}
    </div>
{% endblock %}

