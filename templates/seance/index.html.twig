{% extends 'base.html.twig' %}

{% block title %}Séances{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="mb-4">Toutes les séances</h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Titre de la séance</th>
                <th>Date</th>
                <th>Heure</th>
                <th>Film</th>
                <th>Salle</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for seance in seances %}
                <tr>
                    <td>{{ seance.id }}</td>
                    <td>{{ seance.title }}</td>
                    <td>{{ seance.date ? seance.date|date('d/m/Y') : 'Non définie' }}</td>
                    <td>{{ seance.startTime ? seance.startTime|date('H:i') : 'Non définie' }}</td>
                    <td>{{ seance.film.title }}</td>
                    <td>{{ seance.salle ? seance.salle.numbre : 'Non définie' }}</td>
                    <td>
                        {% if seance.categories|length > 0 %}
                            {% for category in seance.categories %}
                                {{ category.title }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        {% else %}
                            Aucune
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_seance_show', {id: seance.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                        <a href="{{ path('app_seance_edit', {id: seance.id}) }}" class="btn btn-secondary btn-sm">Modifier</a>
                        <a href="{{ path('app_seance_delete', {id: seance.id}) }}" class="btn btn-danger btn-sm"
                           onclick="return confirm('Voulez-vous vraiment supprimer cette séance ?')">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucune séance enregistrée.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_seance_create') }}" class="btn btn-success mt-3">Créer une nouvelle séance</a>
    </div>
{% endblock %}


