{% extends 'base.html.twig' %}

{% block title %}Interface guichet - Séances{% endblock %}

{% block body %}
    <h1 class="text-center text-warning mb-4">Séances - Interface guichet</h1>

    <table class="table table-dark table-hover rounded-4 overflow-hidden">
        <thead>
        <tr>
            <th>Titre de la séance</th>
            <th>Date</th>
            <th>Heure</th>
            <th>Film</th>
            <th>Salle</th>
            <th>Action</th>
        </tr>
        </thead>
        <tbody>
        {% for seance in seances %}
            <tr>
                <td>{{ seance.film.title }}</td>
                <td>{{ seance.date ? seance.date|date('d/m/Y') : 'Non définie' }}</td>
                <td>{{ seance.startTime ? seance.startTime|date('H:i') : 'Non définie' }}</td>
                <td>{{ seance.film.title }}</td>
                <td>{{ seance.salle ? seance.salle.numbre : 'Non définie' }}</td>
                <td>
                    <a href="{{ path('employee_book_seats', { id: seance.id }) }}" class="btn btn-outline-success fw-bold">
                        Réserver
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
