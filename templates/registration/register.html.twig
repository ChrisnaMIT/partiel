{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="container d-flex flex-column justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card bg-dark text-white p-4" style="max-width: 400px; width: 100%; border-radius: 1rem;">
            <h2 class="text-center mb-4">Cr√©er un compte</h2>

            {{ form_start(registrationForm) }}
            <div class="mb-3">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.plainPassword, {'label': 'Mot de passe'}) }}
            </div>
            <div class="mb-3">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-warning btn-block">S'inscrire</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
